<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddActivity">
    <TextView
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add todo"
        android:padding="20dp"
        android:textSize="20sp"
        android:background="#D93BC9"
        android:textColor="@color/white"
        app:layout_constraintTop_toTopOf="parent"/>
    <EditText
        android:layout_marginTop="30dp"
        android:id="@+id/add_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="To do name"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        android:background="@drawable/fon_add"
        android:padding="16dp"
        android:layout_marginHorizontal="40dp"/>
    <EditText
        android:layout_marginTop="20dp"
        android:id="@+id/add_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="To do description"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/add_name"
        android:background="@drawable/fon_add"
        android:padding="16dp"
        android:layout_marginHorizontal="40dp"/>
    <Spinner
        android:layout_marginTop="20dp"
        android:id="@+id/add_spiner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/add_description"
        android:background="@drawable/fon_add"

        android:layout_marginHorizontal="40dp"/>
    <EditText
        android:layout_marginTop="20dp"
        android:id="@+id/create_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="To do date"
        android:inputType="date"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/add_spiner"
        android:background="@drawable/fon_add"
        android:padding="16dp"
        android:layout_marginHorizontal="40dp"/>
    <EditText
        android:layout_marginTop="20dp"
        android:id="@+id/dedline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="To do dedline"
        android:inputType="date"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/create_date"
        android:background="@drawable/fon_add"
        android:padding="16dp"
        android:layout_marginHorizontal="40dp"/>
    <Button
        android:id="@+id/btn_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/dedline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:backgroundTint="#D93BC9"
        android:text="Save"
        android:textSize="20sp"
        app:layout_constraintVertical_bias="0.9"
        app:layout_constraintHorizontal_bias="0.9"
        android:padding="10dp"/>





</androidx.constraintlayout.widget.ConstraintLayout>